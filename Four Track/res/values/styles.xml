<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainColor">
        <item name="android:background">#565656</item>
    </style>
    
    <style name="altColor">
        <item name="android:background">#27324B</item>
    </style>
    
    <style name="listViewColor">
        <item name="android:background">#D5D5D5</item>
        <item name="android:cacheColorHint">#D5D5D5</item>
    </style>
        

    <style name="floatingWindow" parent="@android:style/Theme.Dialog">
<!--         <item name="android:windowBackground">@android:color/transparent</item> -->
<!--         <item name="android:background">@android:color/transparent</item> -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="spinner">
        <item name="android:layout_height">60dip</item>
        <item name="android:layout_width">200dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">2dip</item>
    </style>
    
    <style name="recordButton">
        <item name="android:layout_height">56dip</item>
        <item name="android:layout_width">80dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">ToggleButton</item>
        <item name="android:textOff">Record</item>
        <item name="android:textOn">Stop</item>
        <item name="android:paddingBottom">12dip</item>
    </style>

        
    <style name="listItemDate">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle"></item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="listItemLength">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="listItemTime">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>